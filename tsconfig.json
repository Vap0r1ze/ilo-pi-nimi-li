{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "jsx": "react",
    "jsxFactory": "createElement",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "target": "ES6",
    "lib": [
      "DOM",
      "ES2022"
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
